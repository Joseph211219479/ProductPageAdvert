<?xml version="1.0"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <settings>
        <buttons>
            <button name="add" label="Add New" class="Magento\Backend\Block\Widget\Button\ButtonList"/>
        </buttons>
    </settings>
    <columns name="sozo_productpageadvert_advert_columns">
        <selectionsColumn name="ids">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </selectionsColumn>
        <column name="entity_id">
            <settings>
                <label>ID</label>
                <sortOrder>10</sortOrder>
            </settings>
        </column>
        <column name="heading">
            <settings>
                <label>Heading</label>
                <sortOrder>20</sortOrder>
            </settings>
        </column>
        <column name="message">
            <settings>
                <label>Message</label>
                <sortOrder>30</sortOrder>
            </settings>
        </column>
        <actionsColumn name="actions">
            <settings>
                <indexField>entity_id</indexField>
            </settings>
        </actionsColumn>
    </columns>
    <dataSource name="sozo_productpageadvert_advert_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Sozo\ProductPageAdvert\Ui\DataProvider\Advert\DataProvider</argument>
            <argument name="name" xsi:type="string">sozo_productpageadvert_advert_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <settings>
            <storageConfig>
                <indexField>entity_id</indexField>
            </storageConfig>
        </settings>
    </dataSource>
</listing>
