<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">productpageadvert_advert_form.productpageadvert_advert_form_data_source</item>
            <item name="deps" xsi:type="string">productpageadvert_advert_form.productpageadvert_advert_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Advert Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="layout" xsi:type="array">
            <item name="type" xsi:type="string">tabs</item>
        </item>
        <item name="buttons" xsi:type="array">
           <!-- <item name="back" xsi:type="string">Sozo\ProductPageAdvert\Block\Adminhtml\Advert\Edit\BackButton</item>
            <item name="delete" xsi:type="string">Sozo\ProductPageAdvert\Block\Adminhtml\Advert\Edit\DeleteButton</item>
            <item name="reset" xsi:type="string">Sozo\ProductPageAdvert\Block\Adminhtml\Advert\Edit\ResetButton</item>
            <item name="save" xsi:type="string">Sozo\ProductPageAdvert\Block\Adminhtml\Advert\Edit\SaveButton</item>-->
        </item>
    </argument>



    <dataSource name="productpageadvert_advert_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Sozo\ProductPageAdvert\Ui\DataProvider\Advert\FormDataProvider</argument>
            <argument name="name" xsi:type="string">productpageadvert_advert_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="submit_url" xsi:type="url" path="*/advert/save"/>
            </item>
        </argument>
    </dataSource>

    <fieldset name="advert">
        <settings>
            <label/>
        </settings>
        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">ID</item>
                    <item name="disabled" xsi:type="boolean">true</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">number</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">advert</item>
                </item>
            </argument>
        </field>
        <field name="image_link">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Image Link</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataScope" xsi:type="string">image_link</item>
                </item>
            </argument>
        </field>
        <field name="heading">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Heading</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">heading</item>
                </item>
            </argument>
        </field>
        <field name="message">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Message</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataScope" xsi:type="string">message</item>
                </item>
            </argument>
        </field>
        <field name="url_link">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Url Link</item>
                    <item name="sortOrder" xsi:type="number">30</item>
                    <item name="dataScope" xsi:type="string">url_link</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
